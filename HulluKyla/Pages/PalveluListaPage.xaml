<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HulluKyla.Models.Controls"
             x:Class="HulluKyla.Pages.PalveluListaPage"
             Title="Palveluiden muokkaus">


    <Grid Padding="20"
          RowDefinitions="*,Auto"
          ColumnDefinitions="*,*"
          ColumnSpacing="15">

        <!-- Palvelulista -->
        <ScrollView>
            <Frame BorderColor="Gray" BackgroundColor="Transparent">
                <StackLayout Spacing="15">
                    <Picker x:Name="AluePicker"
                            Grid.Row="0"
                            Title="Valitse alue"
                            HeightRequest="70"
                            ItemDisplayBinding="{Binding Nimi}"
                            SelectedIndexChanged="AluePicker_SelectedIndexChanged" />

                        <CollectionView x:Name="PalveluLista"
                                    SelectionMode="Single" 
                                    SelectionChanged="PalveluSelected"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Fill" >
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="Transparent" BorderColor="Gray">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding Nimi}" FontAttributes="Bold" />
                                            <Label Text="{Binding Kuvaus}" FontSize="12" />
                                            <Label Text="{Binding Hinta}" />
                                            <Label Text="{Binding Alv}" />
                                        </VerticalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                </StackLayout>
            </Frame>
        </ScrollView>

        <!-- Entryt ja buttonit -->
        <VerticalStackLayout Spacing="10" Grid.Column="1" VerticalOptions="Start" HorizontalOptions="Fill">
            <Entry x:Name="NimiEntry" Placeholder="Palvelun nimi..." HeightRequest="50"/>
            <Entry x:Name="KuvausEntry" Placeholder="Palvelun kuvaus..." HeightRequest="50"/>
            <Entry x:Name="HintaEntry" Placeholder="Palvelun hinta..." HeightRequest="50"/>
            <Entry x:Name="AlvEntry" Placeholder="Palvelun arvonlisÃ¤vero..." HeightRequest="50"/>
            <controls:ThreeDButton Text="âœ… Tallenna palvelu" Clicked="TallennaClicked" HeightRequest="50"/>
            <controls:ThreeDButton Text="âŒ Poista palvelu" Clicked="PoistaClicked" HeightRequest="50"/>
        </VerticalStackLayout>

        <!-- Vasemman alakulman napit -->
        <StackLayout Grid.Row="1" Grid.Column="0"
                     Orientation="Horizontal"
                     Spacing="15"
                     HorizontalOptions="Start"
                     VerticalOptions="End"
                     Margin="0,20,0,0">
            <controls:ThreeDButton 
                    Text="ðŸ  Etusivu"
                    Clicked="Navigoi_Clicked"
                    CommandParameter="Etusivu" />
            <controls:ThreeDButton 
                    Text="ðŸ¡¸ Takaisin"
                    Clicked="Navigoi_Clicked"
                    CommandParameter="HallintaPage" />
        </StackLayout>

        <!-- Oikean alakulman nappi -->
            <controls:ThreeDButton 
                    Text="Uusi palvelu ðŸ¡º"
                    Clicked="Navigoi_Clicked"
                    CommandParameter="UusiPalveluPage" 
                    HorizontalOptions="End" 
                    Margin="0,20,0,0"
                    Grid.Column="1"
                    Grid.Row="1"/>

    </Grid>
</ContentPage>