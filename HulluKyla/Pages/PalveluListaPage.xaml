<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HulluKyla.Pages.PalveluListaPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:HulluKyla.Models.Controls"
    Title="Palveluiden muokkaus">


    <Grid
        Padding="20"
        ColumnDefinitions="*,*"
        ColumnSpacing="15"
        RowDefinitions="*,Auto">

        <!--  Palvelulista  -->
        <Frame BackgroundColor="Transparent" BorderColor="Gray">
            <Grid
                ColumnDefinitions="*"
                RowDefinitions="Auto, *"
                RowSpacing="15">
                <Picker
                    x:Name="AluePicker"
                    Title="Valitse alue"
                    Grid.Row="0"
                    HeightRequest="70"
                    ItemDisplayBinding="{Binding Nimi}"
                    SelectedIndexChanged="AluePicker_SelectedIndexChanged" />

                <CollectionView
                    x:Name="PalveluLista"
                    Grid.Row="1"
                    HorizontalOptions="Fill"
                    SelectionChanged="PalveluSelected"
                    SelectionMode="Single"
                    VerticalOptions="Fill">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="Transparent" BorderColor="Gray">
                                <VerticalStackLayout>
                                    <Label FontAttributes="Bold" Text="{Binding Nimi}" />
                                    <Label FontSize="12" Text="{Binding Kuvaus}" />
                                    <Label Text="{Binding Hinta}" />
                                    <Label Text="{Binding Alv}" />
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Grid>
        </Frame>

        <!--  Entryt ja buttonit  -->
        <VerticalStackLayout
            Grid.Column="1"
            HorizontalOptions="Fill"
            Spacing="10"
            VerticalOptions="Start">
            <Entry
                x:Name="NimiEntry"
                HeightRequest="50"
                Placeholder="Palvelun nimi..." />
            <Entry
                x:Name="KuvausEntry"
                HeightRequest="50"
                Placeholder="Palvelun kuvaus..." />
            <Entry
                x:Name="HintaEntry"
                HeightRequest="50"
                Placeholder="Palvelun hinta..." />
            <Entry
                x:Name="AlvEntry"
                HeightRequest="50"
                Placeholder="Palvelun arvonlisÃ¤vero..." />
            <controls:ThreeDButton
                Clicked="TallennaClicked"
                HeightRequest="50"
                Text="âœ… Tallenna palvelu" />
            <controls:ThreeDButton
                Clicked="PoistaClicked"
                HeightRequest="50"
                Text="âŒ Poista palvelu" />
        </VerticalStackLayout>

        <!--  Vasemman alakulman napit  -->
        <StackLayout
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,20,0,0"
            HorizontalOptions="Start"
            Orientation="Horizontal"
            Spacing="15"
            VerticalOptions="End">
            <controls:ThreeDButton
                Clicked="Navigoi_Clicked"
                CommandParameter="Etusivu"
                Text="ðŸ  Etusivu" />
            <controls:ThreeDButton
                Clicked="Navigoi_Clicked"
                CommandParameter="HallintaPage"
                Text="ðŸ¡¸ Takaisin" />
        </StackLayout>

        <!--  Oikean alakulman nappi  -->
        <controls:ThreeDButton
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,20,0,0"
            Clicked="Navigoi_Clicked"
            CommandParameter="UusiPalveluPage"
            HorizontalOptions="End"
            Text="Uusi palvelu ðŸ¡º" />

    </Grid>
</ContentPage>