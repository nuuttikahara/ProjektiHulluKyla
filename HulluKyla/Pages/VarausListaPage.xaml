<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HulluKyla.Models.Controls"
             x:Class="HulluKyla.Pages.VarausListaPage"
             Title="Varaukset">

    <Grid RowDefinitions="0.3*,0.55*,Auto"
          ColumnDefinitions="*,Auto"
          Padding="10">

        <!-- Asiakasvalinta-alue -->
        <Frame BorderColor="Gray"
               BackgroundColor="Transparent"
               CornerRadius="3"
               Padding="10"
               Grid.ColumnSpan="2">

            <Grid RowDefinitions="Auto,*" RowSpacing="10">
                <SearchBar Style="{StaticResource ThemedSearchBar}" 
                    x:Name="AsiakasSearchBar"
                           Placeholder="Etsi asiakasta..."
                           SearchButtonPressed="AsiakasSearchPressed"
                           WidthRequest="300"
                           BackgroundColor="#f2f2f2"
                           HorizontalOptions="Center"
                           PlaceholderColor="Gray" />
                <Frame Grid.Row="1" 
                       BorderColor="Gray" 
                       BackgroundColor="Transparent"
                       CornerRadius="5"
                       Padding="5">
                    <CollectionView x:Name="AsiakasListaView"
                                SelectionChanged="AsiakasSelected"
                                SelectionMode="Single">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="Transparent"
                                   BorderColor="Gray"
                                   CornerRadius="10"
                                       Padding="5">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding KokoNimi}" FontAttributes="Bold"
                                               />
                                        <Label Text="{Binding Email, StringFormat='Email: {0}'}"
                                               />
                                        <Label Text="{Binding Puhelinnro, StringFormat='Puhelin: {0}'}"
                                               />
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Frame>
            </Grid >
        </Frame>

        <!-- Keskialue -->
        <Grid Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              ColumnDefinitions="*,*,*"
              RowDefinitions="*, Auto"
              VerticalOptions="FillAndExpand">

            <!-- Vasen sarake: Varaukset -->
            <Frame Grid.Row="0"
                   Grid.Column="0"
                   Margin="5"
                   BackgroundColor="Transparent"
                   CornerRadius="3"
                   BorderColor="Gray"
                   Padding="10">
                <Grid RowDefinitions="Auto,*" RowSpacing="5">
                    <Label Text="Varaukset"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" 
                           TextDecorations="Underline" />

                    <Frame Grid.Row="1" 
                           BorderColor="Gray" 
                           BackgroundColor="Transparent"
                           CornerRadius="5"
                           Padding="5">
                        <CollectionView x:Name="AsiakkaanVaraukset"
                                SelectionChanged="VarausSelected"
                                SelectionMode="Single">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="10"
                                           Margin="0,5"
                                           BorderColor="Gray"
                                           BackgroundColor="Transparent"
                                           CornerRadius="10">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding Mokki.MokkiNimi, StringFormat='MÃ¶kin nimi: {0}'}"
                                                    />
                                            <Label Text="{Binding VarattuAlkuPvm, StringFormat='Varaus alkaa: {0}'}"
                                                   />
                                            <Label Text="{Binding VarattuLoppuPvm, StringFormat='Varaus loppuu: {0}'}"
                                                   />
                                        </VerticalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Frame>
                </Grid>
            </Frame>

            <!-- Keskisarake: Varauksen palvelut -->
            <Frame Grid.Row="0"
                   Grid.Column="1"
                   Margin="5"
                   CornerRadius="10"
                   BorderColor="Gray"
                   BackgroundColor="Transparent"
                   
                   Padding="10">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Varauksen palvelut"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" 
                           TextDecorations="Underline" />
                    <CollectionView x:Name="VarauksenPalvelut"
                            SelectionChanged="VarauksenPalveluSelected"
                            SelectionMode="Single">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BorderColor="Gray"
                                           BackgroundColor="Transparent"
                                           CornerRadius="10">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Palvelu.Nimi, StringFormat='Palvelun nimi: {0}'}"
                                             />
                                        <Label Text="{Binding Lkm, StringFormat='MÃ¤Ã¤rÃ¤: {0}'}"
                                            />
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Oikea sarake: Kaikki palvelut -->
            <Frame Grid.Row="0"
                   Grid.Column="2"
                   Margin="5"
                   CornerRadius="10"
                   BorderColor="Gray"
                   BackgroundColor="Transparent"
                   
                   Padding="10">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Kaikki palvelut"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextDecorations="Underline" />
                    <CollectionView x:Name="KaikkiPalvelut"
                           SelectionChanged="KaikkiPalvelutSelected"
                           SelectionMode="Single">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="10"
                                           Margin="0,5"
                                           BorderColor="Gray"
                                           BackgroundColor="Transparent"
                                           CornerRadius="10">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Nimi, StringFormat='Palvelun nimi: {0}'}"
                                                    />
                                        <Label Text="{Binding Kuvaus, StringFormat='Kuvaus: {0}'}"
                                                    />
                                        <Label Text="{Binding Hinta, StringFormat='Hinta: {0} â‚¬'}"
                                                    />
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Napit -->
            <StackLayout Grid.Row="1"
                         Grid.Column="0"
                         Orientation="Horizontal"
                         HorizontalOptions="Center">
                <controls:ThreeDButton 
                            Text="âŒ Poista varaus" Margin="5"
