        </StackLayout>

        <StackLayout Grid.Row="2"
                     Grid.Column="1"
                     Orientation="Horizontal"
                     HorizontalOptions="End"
                     VerticalOptions="End"
                     Margin="0,0,10,5">
            <controls:ThreeDButton 
                    Text="Uusi varaus ðŸ¡º"
                    Clicked="Navigoi_Clicked"
                    CommandParameter="UusiVarausPage" />
        </StackLayout>
    </Grid>

</ContentPage>