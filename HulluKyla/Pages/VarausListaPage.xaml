                <controls:ThreeDButton 
                            Clicked="LisaaPalvelu_Clicked"
                            Text="âœ… LisÃ¤Ã¤ palvelu"
                            HorizontalOptions="Center"
                            Margin="5" />
            </HorizontalStackLayout>


        </Grid>

        <!-- Alapainikkeet -->
        <StackLayout Grid.Row="2"
                     Grid.Column="0"
                     Orientation="Horizontal"
                     HorizontalOptions="Start"
                     VerticalOptions="End"
                     Margin="10,0,0,5">
            <controls:ThreeDButton 
                    Text="ðŸ  Etusivu"
