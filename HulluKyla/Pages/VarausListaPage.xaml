            </StackLayout>

            <controls:ThreeDButton 
                    Grid.Row="1"
                    Grid.Column="1"
                    Clicked="PoistaPalvelu_Clicked"
                    Text="âŒ Poista palvelu"
                    HorizontalOptions="Center"
                    Margin="5" />

            <HorizontalStackLayout 
                    Grid.Row="1"
                    Grid.Column="2"
                    HorizontalOptions="Center"
                    Spacing="10">

                <Entry Style="{StaticResource ThemedEntry}" x:Name="LkmEntry"
                           Placeholder="KappalemÃ¤Ã¤rÃ¤..."
